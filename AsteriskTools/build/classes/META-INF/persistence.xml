<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="AsteriskTools">
		<jta-data-source>java:/App/AsteriskToolsPostgres</jta-data-source>
		<class>co.com.pulxar.entities.Usuario</class>
		<class>co.com.pulxar.entities.Cdr</class>
		<class>co.com.pulxar.entities.QueueLog</class>
		<class>co.com.pulxar.entities.Grabacion</class>
		<properties>
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="update"/>
		</properties>
	</persistence-unit>
</persistence>
